@model Boat;
@using System.Globalization
@{
    var cultureFr = new CultureInfo("fr-FR");
}

<h1>Prochaine Fermeture</h1>

<table class="table">
    <thead>
        <tr>
            <th>Prochaine fermeture :</th>
            <th>Prochaine réouverture :</th>
            <th>Bateau concerné :</th>
            <th>Durée de la fermeture :</th>
            <th>Rique de bouchon :</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model._closingDate.ToString("dddd d MMMM, hh:mm", cultureFr)</td>
            <td>@Model._reopeningDate.ToString("dddd d MMMM, hh:mm", cultureFr)</td>
            <td>@Model._boatName</td>
            <td>@Model._blockDuree heures</td>
            <td>@Model._jamRisks</td>
        </tr>
    </tbody>
</table>